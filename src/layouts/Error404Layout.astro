// src/layouts/Error404Layout.astro - Layout para p√°ginas 404 CORREGIDO
import Layout from './Layout.astro';

// Importar componentes b√°sicos
import PropertyCarousel from '../components/PropertyCarousel.astro';
import PopularLocations from '../components/PopularLocations.astro';

// ===================================================================
// RECIBIR DATOS DEL ROUTER Y VALIDAR
// ===================================================================

const { data, language } = Astro.props;

// Fix para datos que pueden estar undefined - NUEVA SECCI√ìN
const safeData = {
  ...data,
  originalUrl: data?.originalUrl || Astro.url.pathname,
  language: language || data?.language || 'es',
  message: data?.message || 'P√°gina no encontrada',
  error: data?.error || 'No disponible'
};

console.log('‚úÖ Error404Layout - Fixed props:', {
  originalUrl: safeData.originalUrl,
  language: safeData.language,
  hasError: !!safeData.error,
  receivedData: data ? Object.keys(data) : []
});

// ===================================================================
// DETECTAR IDIOMA DE LA URL
// ===================================================================

function detectLanguageFromUrl(pathname) {
  const segments = pathname.split('/').filter(Boolean);
  
  // Detectar prefijo de idioma
  if (segments.length > 0) {
    const firstSegment = segments[0].toLowerCase();
    switch (firstSegment) {
      case 'en':
        return { language: 'en', segments: segments.slice(1) };
      case 'fr':
        return { language: 'fr', segments: segments.slice(1) };
      default:
        return { language: 'es', segments: segments };
    }
  }
  
  return { language: 'es', segments: [] };
}

// ===================================================================
// CONFIGURACI√ìN DE TEXTOS POR IDIOMA
// ===================================================================

const TEXTS = {
  es: {
    title: 'P√°gina no encontrada | CLIC Inmobiliaria',
    description: 'La p√°gina que buscas no existe. Encuentra tu propiedad ideal en Rep√∫blica Dominicana.',
    h1: 'P√°gina no encontrada',
    subtitle: 'La p√°gina que buscas no existe o ha sido movida',
    searchPlaceholder: 'Buscar propiedades...',
    homeButton: 'Ir al inicio',
    exploreButton: 'Explorar propiedades',
    helpText: 'Te ayudamos a encontrar lo que buscas:',
    popularSections: 'Secciones populares',
    routes: {
      home: '/',
      buy: '/comprar',
      rent: '/alquilar', 
      sell: '/vender',
      projects: '/proyectos',
      locations: '/ubicaciones',
      contact: '/contacto'
    },
    edgeRoute: 'comprar' // Ruta para la edge function
  },
  en: {
    title: 'Page not found | CLIC Real Estate',
    description: 'The page you are looking for does not exist. Find your ideal property in Dominican Republic.',
    h1: 'Page not found',
    subtitle: 'The page you are looking for does not exist or has been moved',
    searchPlaceholder: 'Search properties...',
    homeButton: 'Go home',
    exploreButton: 'Explore properties',
    helpText: 'Let us help you find what you are looking for:',
    popularSections: 'Popular sections',
    routes: {
      home: '/en',
      buy: '/en/buy',
      rent: '/en/rent',
      sell: '/en/sell', 
      projects: '/en/projects',
      locations: '/en/locations',
      contact: '/en/contact'
    },
    edgeRoute: 'en/buy'
  },
  fr: {
    title: 'Page non trouv√©e | CLIC Immobilier',
    description: 'La page que vous cherchez n\'existe pas. Trouvez votre propri√©t√© id√©ale en R√©publique Dominicaine.',
    h1: 'Page non trouv√©e',
    subtitle: 'La page que vous cherchez n\'existe pas ou a √©t√© d√©plac√©e',
    searchPlaceholder: 'Rechercher des propri√©t√©s...',
    homeButton: 'Accueil',
    exploreButton: 'Explorer les propri√©t√©s',
    helpText: 'Nous vous aidons √† trouver ce que vous cherchez:',
    popularSections: 'Sections populaires',
    routes: {
      home: '/fr',
      buy: '/fr/acheter',
      rent: '/fr/louer',
      sell: '/fr/vendre',
      projects: '/fr/projets', 
      locations: '/fr/emplacements',
      contact: '/fr/contact'
    },
    edgeRoute: 'fr/acheter'
  }
};

// ===================================================================
// LLAMADA B√ÅSICA A LA EDGE FUNCTION
// ===================================================================

// API de Neon en Vercel (no requiere autenticaci√≥n)
const BASE_URL = 'https://clic-api-neon.vercel.app';

// Detectar idioma - USAR EL IDIOMA DEL ROUTER COMO PRIORIDAD
const currentPath = safeData.originalUrl;
const { language: urlLanguage, segments } = detectLanguageFromUrl(currentPath);
const finalLanguage = safeData.language || urlLanguage; // Priorizar el del router
const text = TEXTS[finalLanguage];

// Construir URL para la edge function (ruta b√°sica de propiedades)
const edgeFunctionURL = `${BASE_URL}/${text.edgeRoute}?limit=6`;

console.log('üîó 404 - Calling edge function for navigation:', edgeFunctionURL);

// Llamar a la edge function para obtener datos b√°sicos
let navigationData = null;
try {
  // La API de Neon no requiere autenticaci√≥n
  const response = await fetch(edgeFunctionURL, {
    method: 'GET',
    headers: {
      'Content-Type': 'application/json',
      'User-Agent': `CLIC-404/${Astro.url.hostname}`,
      'X-Original-Host': Astro.url.hostname,
    },
  });

  if (response.ok) {
    navigationData = await response.json();
  }
} catch (error) {
  console.warn('‚ö†Ô∏è 404 - Error calling edge function for navigation:', error);
}

// Extraer datos b√°sicos para navegaci√≥n
const featuredProperties = navigationData?.properties?.slice(0, 6) || [];
const hotItems = navigationData?.hotItems || { cities: [], sectors: [] };
const globalConfig = navigationData?.globalConfig || {};

// ===================================================================
// SEO PARA 404
// ===================================================================

const seoTitle = text.title;
const seoDescription = text.description;
const canonicalUrl = safeData.originalUrl;

console.log('‚úÖ 404Layout prepared:', {
  language: finalLanguage,
  originalPath: currentPath,
  segments,
  featuredPropertiesCount: featuredProperties.length,
  hotItemsCount: (hotItems.cities?.length || 0) + (hotItems.sectors?.length || 0),
  routerError: safeData.error
});
---

<Layout 
  title={seoTitle}
  description={seoDescription}
  canonicalUrl={canonicalUrl}
  robots="noindex, nofollow"
  language={finalLanguage}
  globalConfig={globalConfig}
>
  <!-- Font Awesome CDN -->
  <link 
