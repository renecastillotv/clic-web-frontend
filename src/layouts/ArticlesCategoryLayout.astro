  language: language,
  category: categorySlug,
  categorySlug: categorySlug,
  title: safeString(
    data?.seo?.h1 ||
    data?.category?.name ||
    (language === 'es' ? 'Art√≠culos' : language === 'en' ? 'Articles' : 'Articles')
  ),
  description: safeString(
    data?.seo?.h2 ||
    data?.seo?.description ||
    (language === 'es' ? 'Explora nuestra colecci√≥n de art√≠culos sobre el mercado inmobiliario.' :
     language === 'en' ? 'Explore our collection of articles about the real estate market.' :
     'Explorez notre collection d\'articles sur le march√© immobilier.')
  ),
  icon: categoryIcons[categorySlug] || 'fa-newspaper',
  slug: categorySlug,
  url: safeString(data?.category?.url || `#${categorySlug}`)
