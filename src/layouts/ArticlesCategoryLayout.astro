// Procesar art√≠culos
const rawArticles = safeArray(categoryData.articles);
const safeArticles = rawArticles.map((article, index) => ({
  id: safeString(article.id, `article-${index}`),
  slug: safeString(article.slug, `articulo-${index}`),
