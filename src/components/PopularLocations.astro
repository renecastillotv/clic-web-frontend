    priceFrom: contentData?.priceFrom || city.avg_price || city.precio || 'Consultar',
    priority: city.priority || 0,
    type: 'city'
  };
}).filter(city => city.availableProperties > 0);

const sectors = (hotItems.sectors || []).map((sector, index) => {
