<!-- Script MEJORADO con manejo robusto -->
<script define:vars={{ 
  coordinates: displayCoordinates, 
  propertyTitle: property.title_display || property.title || property.name || 'Propiedad',
  mapConfig: mapConfig,
  locationData: locationData,
  language: language,
  translations: translations,
  nearbyPlaces: lugares
}}>
  // Estado global del mapa
  window.mapState = window.mapState || {
    map: null,
    markers: [],
    initialized: false,
    retryCount: 0,
    maxRetries: 3
  };

  // Hacer las traducciones globales
  window.translations = translations;
  window.language = language;

  // Funci√≥n para toggle de servicios
  window.toggleServices = function() {
    const extraGrid = document.getElementById('services-grid-extra');
    const toggleBtn = document.getElementById('toggle-services-btn');
    const toggleText = document.getElementById('toggle-services-text');
    const toggleIcon = document.getElementById('toggle-services-icon');
    const t = translations[language] || translations['es'];
    
    if (extraGrid && toggleBtn && toggleText && toggleIcon) {
      if (extraGrid.classList.contains('hidden')) {
        extraGrid.classList.remove('hidden');
        extraGrid.classList.add('grid');
        toggleText.textContent = t.showLess;
        toggleIcon.classList.remove('fa-chevron-down');
        toggleIcon.classList.add('fa-chevron-up');
      } else {
        extraGrid.classList.add('hidden');
        extraGrid.classList.remove('grid');
        toggleText.textContent = t.showMore;
        toggleIcon.classList.remove('fa-chevron-up');
        toggleIcon.classList.add('fa-chevron-down');
      }
    }
  };

  // FUNCI√ìN PRINCIPAL DE INICIALIZACI√ìN DEL MAPA - MEJORADA
  window.initPropertyMapRobust = function() {
    const mapElement = document.getElementById('google-map');
    
    if (!mapElement) {
      console.warn('üó∫Ô∏è Elemento del mapa no encontrado');
      return false;
    }

    // Si ya est√° inicializado y el mapa existe, no reinicializar
    if (window.mapState.initialized && window.mapState.map) {
      console.log('üó∫Ô∏è Mapa ya inicializado, skipping...');
      return true;
    }

    if (!window.google || !window.google.maps) {
      console.warn('üó∫Ô∏è Google Maps API no disponible a√∫n');
      
      // Retry con backoff
      if (window.mapState.retryCount < window.mapState.maxRetries) {
        window.mapState.retryCount++;
        const delay = window.mapState.retryCount * 1000; // 1s, 2s, 3s
        console.log(`üó∫Ô∏è Reintentando en ${delay}ms (intento ${window.mapState.retryCount}/${window.mapState.maxRetries})`);
        setTimeout(() => window.initPropertyMapRobust(), delay);
      } else {
        console.error('üó∫Ô∏è M√°ximo de reintentos alcanzado');
        showMapError();
      }
      return false;
    }

    try {
      console.log('üó∫Ô∏è Inicializando mapa con coordenadas:', coordinates);

      const propertyLocation = {
        lat: coordinates?.lat || 18.4682,
        lng: coordinates?.lng || -69.9279
      };

      // Crear el mapa
      window.mapState.map = new google.maps.Map(mapElement, {
        zoom: mapConfig.zoom || 15,
        center: propertyLocation,
        styles: [
          {
            "featureType": "poi",
            "elementType": "labels",
            "stylers": [{"visibility": "simplified"}]
          }
        ],
        gestureHandling: 'cooperative' // Mejor UX en mobile
      });

      // Marker principal de la propiedad
      if (mapConfig.showMarker !== false) {
        const propertyMarker = new google.maps.Marker({
          position: propertyLocation,
          map: window.mapState.map,
          title: propertyTitle,
          icon: {
            path: google.maps.SymbolPath.CIRCLE,
            scale: 10,
            fillColor: '#f04e00',
            fillOpacity: 1,
            strokeColor: '#ffffff',
            strokeWeight: 3
          },
          zIndex: 999
        });
        
        window.mapState.markers.push(propertyMarker);
      }

      // Agregar lugares cercanos si existen
      if (nearbyPlaces && nearbyPlaces.length > 0) {
        const geocoder = new google.maps.Geocoder();
        
        nearbyPlaces.slice(0, 5).forEach((place, index) => {
          if (place.direccion) {
            geocoder.geocode({ address: place.direccion }, (results, status) => {
              if (status === 'OK' && results && results.length > 0 && window.mapState.map) {
                const placeMarker = new google.maps.Marker({
                  position: results[0].geometry.location,
                  map: window.mapState.map,
                  title: place.nombre,
                  icon: {
                    path: google.maps.SymbolPath.CIRCLE,
                    scale: 6,
                    fillColor: getCategoryColorForMarker(place.categoria),
                    fillOpacity: 0.8,
                    strokeColor: '#ffffff',
                    strokeWeight: 2
                  }
                });

                window.mapState.markers.push(placeMarker);

                const infoWindow = new google.maps.InfoWindow({
                  content: `
                    <div class="p-2">
                      <h4 class="font-semibold text-sm">${place.nombre}</h4>
                      <p class="text-xs text-gray-600 capitalize">${place.categoria.replace('_', ' ')}</p>
                      <p class="text-xs text-gray-500 mt-1">${place.direccion}</p>
                    </div>
                  `
                });

                placeMarker.addListener('click', () => {
                  infoWindow.open(window.mapState.map, placeMarker);
                });
              }
            });
          }
        });
      }

      // Marcar como inicializado
      window.mapState.initialized = true;
      mapElement.setAttribute('data-map-initialized', 'true');
      console.log('‚úÖ Mapa cargado exitosamente');
      
      return true;

    } catch (error) {
      console.error('‚ùå Error inicializando el mapa:', error);
      showMapError();
      return false;
    }
  };

  // Funci√≥n helper para colores de markers
  function getCategoryColorForMarker(categoria) {
    const colors = {
      'supermercado': '#f59e0b',
      'hospital': '#dc2626',
      'banco': '#3b82f6',
      'colegio': '#10b981',
      'centro_comercial': '#f04e00',
      'farmacia': '#059669',
      'gasolinera': '#f97316',
      'gimnasio': '#8b5cf6',
      'cine': '#ec4899',
      'restaurante': '#ef4444',
      'bar': '#a855f7',
      'hotel': '#06b6d4',
      'policia': '#1e40af',
      'veterinaria': '#16a34a',
      'instituto': '#0ea5e9',
      'bomberos': '#dc2626',
      'parque': '#22c55e',
      'iglesia': '#7c3aed',
      'biblioteca': '#0891b2'
    };
    return colors[categoria] || '#6b7280';
  }

  // Funci√≥n para mostrar error
  function showMapError() {
    const mapElement = document.getElementById('google-map');
    if (mapElement) {
      mapElement.innerHTML = `
        <div class="w-full h-64 bg-gradient-to-br from-orange-50 via-gray-50 to-orange-100 flex items-center justify-center rounded-xl">
          <div class="text-center">
            <i class="fas fa-map-marker-alt text-[#f04e00] text-4xl mb-2"></i>
            <p class="text-gray-800 font-semibold mb-1">Mapa no disponible</p>
            <p class="text-sm text-gray-600">${propertyTitle}</p>
            <button 
              onclick="window.mapState.retryCount = 0; window.initPropertyMapRobust();"
              class="mt-3 text-xs text-[#f04e00] hover:underline"
            >
              Reintentar carga
            </button>
          </div>
        </div>
      `;
    }
  }

  // DATOS PARA COMPATIBILIDAD CON LAYOUT
  if (typeof window !== 'undefined') {
    window.propertyData = {
      coordinates: coordinates,
      title: propertyTitle,
      showMarker: mapConfig.showMarker,
      zoom: mapConfig.zoom,
      nearbyPoints: nearbyPlaces.slice(0, 5).map(place => ({
        name: place.nombre,
        description: place.categoria,
        address: `${place.direccion} - ${place.distancia_display || '500m'}`
      }))
    };
  }

  // INICIALIZACI√ìN AUTOM√ÅTICA CON M√öLTIPLES TRIGGERS
  
  // 1. DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      setTimeout(() => window.initPropertyMapRobust(), 500);
    });
  } else {
    // DOM ya cargado
    setTimeout(() => window.initPropertyMapRobust(), 500);
  }

  // 2. Visibility Change - Reinicializar si la p√°gina vuelve a ser visible
  document.addEventListener('visibilitychange', () => {
    if (!document.hidden && !window.mapState.initialized) {
      console.log('üó∫Ô∏è P√°gina visible de nuevo, reinicializando mapa...');
      window.mapState.retryCount = 0;
      setTimeout(() => window.initPropertyMapRobust(), 300);
    }
  });

  // 3. Page Show - Para casos de back/forward cache (bfcache)
  window.addEventListener('pageshow', (event) => {
    if (event.persisted && !window.mapState.initialized) {
      console.log('üó∫Ô∏è P√°gina restaurada desde cache, reinicializando mapa...');
      window.mapState.retryCount = 0;
      setTimeout(() => window.initPropertyMapRobust(), 300);
    }
  });

  // 4. Intersection Observer - Inicializar cuando el mapa sea visible
  if ('IntersectionObserver' in window) {
    const mapElement = document.getElementById('google-map');
    if (mapElement) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !window.mapState.initialized) {
            console.log('üó∫Ô∏è Mapa visible en viewport, inicializando...');
            window.initPropertyMapRobust();
            observer.disconnect(); // Solo observar una vez
          }
        });
      }, { threshold: 0.1 });
      
      observer.observe(mapElement);
    }
  }
</script>

