// Funci√≥n para formatear fecha de entrega
function formatDeliveryDate(dateStr: string | null | undefined): string {
  if (!dateStr) return '';

  // Si es formato YYYY-MM, agregar d√≠a 15 para evitar problemas de timezone
  if (/^\d{4}-\d{2}$/.test(dateStr)) {
    const [year, month] = dateStr.split('-');
    const date = new Date(parseInt(year), parseInt(month) - 1, 15);
    return date.toLocaleDateString(
      language === 'es' ? 'es-DO' : language === 'fr' ? 'fr-FR' : 'en-US',
      { month: 'long', year: 'numeric' }
    );
  }

  // Fecha completa
  const date = new Date(dateStr + 'T12:00:00');
  return date.toLocaleDateString(
    language === 'es' ? 'es-DO' : language === 'fr' ? 'fr-FR' : 'en-US',
    { month: 'long', year: 'numeric' }
  );
}

